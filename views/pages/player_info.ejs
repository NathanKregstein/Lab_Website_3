							<th>Year</th>
							<td id='player_year'> 	
								
								<%
							 							 	if (result_2) {
							   		var stuff = '';
							 	result_2.forEach(function(item){
							 		 
							 		
							 		stuff += item.year;
							 		
							   	 }); %>
							   	 <%- stuff %>
							 <% } %>
								
							</td>
						</tr>
						<tr>
